public class Main {
    public static void main(String[] args) {
        int rows = 4;
        for (int i = 1; i <= rows; i++) {
            int num = 1;
            for (int j = 1; j <= i; j++) {
                System.out.print(num + " ");
                if (j % 2 == 0) {
                    num++;
                } else {
                    num = num + (i - j);
                }
            }
            System.out.println();
        }
    }
}
output
1
1 1
1 2 1
1 3 3 1
